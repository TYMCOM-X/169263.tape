FLIST.:	BLOCK	0
FILLST:	BLOCK	1		;HEAD OF FILEBLOCK LIST
CHNTAB:	XWD	377774,0	;BIT TABLE FOR CHANNEL ALLOCATOR
GTCHCC:	EXP	GTCFCC		; CNTRL CHAR PROCESSOR

