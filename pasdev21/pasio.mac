UPRIB=^O000000000001
FALL=^O000000000002

FLUSHA:
	PUSHJ	STK,SAVREG
	MOVEI	ACB0,FALL!UPRIB
	JRST	FLUSH

FLUSH1:
	PUSHJ	STK,SAVREG
	MOVEI	ACB0,UPRIB

; COMMON CODE FOR FLUSHA AND FLUSH1.

FLUSH:
	FLUSHF	ACB0,FILEID
	JRST	RETERR
	JRST	RETOK


;    RETURN POINTS

RETERR:
	MOVEI  AC0,ERR
	MOVEM  AC0,@ERRADR
	JRST	RESREG

RETOK:
	MOVEI  AC0,NOERR
	MOVEM  AC0,@ERRADR
	JRST	RESREG

END
