	RECORD=0		; if <> 0, count events

	ife RECORD,<define COUNT(A) <> > ; null definition

	ifn RECORD,<define COUNT(A)
	  <	AOS	0,A	>

	  $low
	  C$VTRN::exp	0
	  C$FTRN::exp	0
	  C$FXLT::exp	0
